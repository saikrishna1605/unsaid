/**
 * Core Philosophy:
 * This ruleset enforces a security model based on user ownership, explicit roles,
 * and structural segregation of data. The primary goal is to ensure that users
 * can only access and manage their own information, while allowing for public
 * read access to community content and administrator-only control over curated
 * content.
 *
 * Data Structure:
 * The data is organized into several top-level collections. User-specific private
 * data, such as help requests, is nested under the `/users/{userId}` path to
 * leverage path-based security. Publicly readable content like posts, lessons,
 * and news articles reside in their own top-level collections. A special
 * `/roles_admin` collection is used to manage administrator privileges.
 *
 * Key Security Decisions:
 * - User Isolation: Users can only read and write their own profile document
 *   in `/users/{userId}`. Listing users is explicitly disallowed to protect privacy.
 * - Ownership Model: For user-generated content in public collections (e.g., /posts),
 *   a `userId` field is denormalized onto each document. This allows for efficient
 *   owner-only write validation without extra database reads.
 * - Admin Privileges: Write access to read-only public collections like `/lessons`
 *   and `/news_articles` is restricted to users whose UID exists in the
 *   `/roles_admin` collection.
 * - Collaborative Data: Access to shared documents like `/sessions` is intended to be
 *   managed by denormalizing a `participantIds` array onto the document itself.
 *   This avoids complex and slow multi-document reads within the rules.
 * - Default Posture: The default is to deny access. Rules are written to
 *   explicitly grant permissions based on authentication, ownership, or role.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    /**
     * Returns true if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Returns true if the authenticated user's UID matches the provided userId.
     * Use this to verify ownership based on a path variable.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Returns true if the user is the owner of an existing document.
     * Used for safe update and delete operations.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * Returns true if the user is the owner of the document being written.
     * Checks ownership against a 'userId' field in the document data.
     */
    function isDocumentOwner(doc) {
      return isSignedIn() && request.auth.uid == doc.userId;
    }

    /**
     * Returns true if the user has an admin role document.
     * Checks for the existence of a document in the roles_admin collection.
     */
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }


    // ----------------------------------------------------------------------
    // User Data
    // ----------------------------------------------------------------------

    /**
     * @description A user can create, read, and manage their own profile.
     * @path /users/{userId}
     * @allow (create) A new user signs up and creates their own profile document: auth.uid === userId.
     * @deny (get) A user tries to read another user's profile: auth.uid !== userId.
     * @principle Restricts access to a user's own data tree and prevents user enumeration.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);

      /**
       * @description A user can manage their own help requests.
       * @path /users/{userId}/help_requests/{helpRequestId}
       * @allow (create) A user creates a new help request under their own profile: auth.uid === userId.
       * @deny (list) A user tries to list another user's help requests: auth.uid !== userId.
       * @principle Enforces strict ownership of data within a user's private subcollection.
       */
      match /help_requests/{helpRequestId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }
    }

    // ----------------------------------------------------------------------
    // Community Content
    // ----------------------------------------------------------------------

    /**
     * @description Any signed-in user can read posts, but only the author can create, update, or delete them.
     * @path /posts/{postId}
     * @allow (create) A signed-in user creates a new post and sets their own UID as the 'userId'.
     * @deny (update) A user tries to change another user's post.
     * @principle Implements a "Public Read, Owner-Only Write" pattern using a denormalized 'userId' field.
     */
    match /posts/{postId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn() && isDocumentOwner(request.resource.data);
      allow update: if resource != null && isDocumentOwner(resource.data) && request.resource.data.userId == resource.data.userId;
      allow delete: if resource != null && isDocumentOwner(resource.data);

      /**
       * @description Any signed-in user can read comments, but only the author can manage their own.
       * @path /posts/{postId}/comments/{commentId}
       * @allow (create) A signed-in user adds a comment to a post, setting their own 'userId'.
       * @deny (delete) A user tries to delete another user's comment.
       * @principle Subcollection access is granted for reads, but writes remain owner-restricted.
       */
      match /comments/{commentId} {
        allow get: if isSignedIn();
        allow list: if isSignedIn();
        allow create: if isSignedIn() && isDocumentOwner(request.resource.data) && request.resource.data.postId == postId;
        allow update: if resource != null && isDocumentOwner(resource.data) && request.resource.data.userId == resource.data.userId && request.resource.data.postId == resource.data.postId;
        allow delete: if resource != null && isDocumentOwner(resource.data);
      }

      /**
       * @description Any signed-in user can read reactions, but only the author can add or remove their own.
       * @path /posts/{postId}/reactions/{reactionId}
       * @allow (create) A signed-in user adds a reaction to a post, setting their own 'userId'.
       * @deny (delete) A user tries to remove another user's reaction.
       * @principle Subcollection access is granted for reads, but writes remain owner-restricted.
       */
      match /reactions/{reactionId} {
        allow get: if isSignedIn();
        allow list: if isSignedIn();
        allow create: if isSignedIn() && isDocumentOwner(request.resource.data) && request.resource.data.postId == postId;
        allow update: if resource != null && isDocumentOwner(resource.data) && request.resource.data.userId == resource.data.userId && request.resource.data.postId == resource.data.postId;
        allow delete: if resource != null && isDocumentOwner(resource.data);
      }
    }

    // ----------------------------------------------------------------------
    // Help & Support System
    // ----------------------------------------------------------------------

    /**
     * @description Any signed-in user can view volunteer offers, but only the author can manage their own offer.
     * @path /volunteer_offers/{volunteerOfferId}
     * @allow (create) A signed-in user creates a new volunteer offer, setting their own 'userId'.
     * @deny (update) A user attempts to modify an offer they did not create.
     * @principle Implements a "Public Read, Owner-Only Write" pattern for marketplace-style data.
     */
    match /volunteer_offers/{volunteerOfferId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn() && isDocumentOwner(request.resource.data);
      allow update: if resource != null && isDocumentOwner(resource.data) && request.resource.data.userId == resource.data.userId;
      allow delete: if resource != null && isDocumentOwner(resource.data);
    }

    /**
     * @description Only participants of a session can access it. Listing all sessions is disallowed.
     * @path /sessions/{sessionId}
     * @allow (get) A user who is a participant reads the session details.
     * @deny (list) Any user tries to list all support sessions in the system.
     * @principle Enforces access control for collaborative data by checking for the user's UID in a denormalized 'participantIds' array on the document.
     */
    match /sessions/{sessionId} {
      // NOTE: These rules require the 'Session' document to contain an array field named `participantIds`
      // that stores the UIDs of all users who should have access.
      allow get: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;
      allow update: if resource != null && request.auth.uid in resource.data.participantIds;
      allow delete: if resource != null && request.auth.uid in resource.data.participantIds;
    }

    // ----------------------------------------------------------------------
    // Public Read-Only Content (Admin Managed)
    // ----------------------------------------------------------------------

    /**
     * @description All users (even unauthenticated) can read lessons, but only admins can manage them.
     * @path /lessons/{lessonId}
     * @allow (list) An anonymous user lists all available lessons.
     * @deny (create) A regular, non-admin user attempts to create a new lesson.
     * @principle Segregates public, read-only data and restricts all write operations to privileged admin users.
     */
    match /lessons/{lessonId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    /**
     * @description All users (even unauthenticated) can read news, but only admins can manage it.
     * @path /news_articles/{newsArticleId}
     * @allow (get) An anonymous user reads a specific news article.
     * @deny (delete) A regular, non-admin user attempts to delete a news article.
     * @principle Segregates public, read-only data and restricts all write operations to privileged admin users.
     */
    match /news_articles/{newsArticleId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    // ----------------------------------------------------------------------
    // Administration
    // ----------------------------------------------------------------------

    /**
     * @description Only administrators can read or modify the list of administrators.
     * @path /roles_admin/{userId}
     * @allow (create) An existing admin grants another user admin privileges.
     * @deny (get) A non-admin user tries to see who the admins are.
     * @principle Protects the role management system itself, ensuring only privileged users can assign roles.
     */
    match /roles_admin/{userId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }
  }
}